<h1>Edit <%= @pet.name %>'s post</h1>

<%= form_for [@pet, @post] do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
    </div>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>