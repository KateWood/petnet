<h1>Posts</h1>
<table class="table table-hover">
  	<thead>
    	<tr>
	      	<th>Posted by</th>
	      	<th>Title</th>
	      	<th>Image</th>
	      	<th>Body</th>
	      	<th colspan="3"></th>
    	</tr>
  	</thead>

  	<tbody>
    	<% @posts.each do |post| %>
      	<tr>
            <td><% if post.pet %>
            	<%= link_to post.pet.name, post.pet %>
            	<% end %>
            </td>
	        <td><%= post.title %></td>
	        <td><%= link_to (image_tag post.image.url(:small)), post %></td>
	        <td><%= post.body %></td>
      	</tr>
    	<% end %>
  	</tbody>
</table>