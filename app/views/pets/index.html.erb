<% if current_user %>
  	Logged in as: <%= current_user.name %> <%= link_to 'Log Out', logout_path, method: :delete %>
<% else %>
  	<%= link_to 'Log In', login_path %>
  	<%= link_to 'Sign Up', users_new_path %>
<% end %>

<%= link_to 'View Users', users_path %>

<h1>Pets</h1>
<table>
  	<thead>
    	<tr>
	      	<th>Name</th>
	      	<th>Photo</th>
	      	<th>Description</th>
	      	<th>Birthday</th>
	      	<th>Parent</th>
	      	<th colspan="3"></th>
    	</tr>
  	</thead>

  	<tbody>
    	<% @pets.each do |pet| %>
      	<tr>
	        <td><%= link_to pet do %>
                    <%= pet.name %>
                <% end %>
            </td>
	        <td><%= link_to pet do %>
                    <%= image_tag pet.image.url(:small) %>
                <% end %>
            </td>
	        <td><%= pet.description %></td>
	        <td><%= pet.birthday %></td>
	        <td><%= link_to pet.user do %>
                    <%= pet.user.name if pet.user %>
                <% end %>
            </td>
      	</tr>
    	<% end %>
  	</tbody>
</table>
