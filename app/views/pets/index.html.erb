<h1>Petnet Pets
<button type="button" class="btn btn-default">
  <%= link_to 'Add a new pet profile', new_pet_path %>
</button>
</h1>
<table class="table table-hover">
  	<thead>
    	<tr>
	      	<th>Name</th>
	      	<th>Photo</th>
	      	<th>Description</th>
	      	<th>Birthday</th>
	      	<th>Parent</th>
	      	<th colspan="3"></th>
    	</tr>
  	</thead>

  	<tbody>
    	<% @pets.each do |pet| %>
      	<tr>
            <td><%= link_to pet.name, pet %></td>
	        <td><%= link_to (image_tag pet.image.url(:small)), pet %></td>
	        <td><%= pet.description %></td>
	        <td><%= pet.birthday %></td>
            <% if pet.user %>
                <td><%= link_to pet.user.name, pet.user %></td>
            <% end %>
      	</tr>
    	<% end %>
  	</tbody>
</table>
