<h1>Add your pet</h1>
<%= form_for @pet do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :birthday %>
        <%= f.date_field :birthday %>
    </div>
    <div>
        <%= f.label :photo %>
        <%= f.text_field :photo %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>