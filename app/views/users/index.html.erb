<h1>Pet Parents
<button type="button" class="btn btn-default">
  <%= link_to 'Add a new pet profile', new_pet_path %>
</button>
</h1>
<table class="table table-hover">
  	<thead>
    	<tr>
	      	<th>Name</th>
          <th>Photo</th>
	      	<th>Email</th>
	      	<th colspan="3"></th>
    	</tr>
  	</thead>

  	<tbody>
    	<% @users.each do |user| %>
      	<tr>
	        <td><%= link_to user.name, user %></td>
          <td><%= link_to (image_tag user.image.url(:small)), user %></td>
	        <td><%= mail_to user.email, user.email %></td>
      	</tr>
    	<% end %>
  	</tbody>
</table>